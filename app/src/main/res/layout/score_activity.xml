<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spacebackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/game_over"
        android:textColor="#BD6D6D"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/your_score_placeholder"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/high_score_placeholder"
        android:textColor="#C8CA93"
        android:textSize="28sp" />

    <Button
        android:id="@+id/retryButton"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2C3870"
        android:padding="12dp"
        android:text="@string/play_again"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/retryButton2"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#434E68"
        android:padding="12dp"
        android:text="@string/go_to_main_menu"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>
