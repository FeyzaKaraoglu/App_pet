<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Hedef belirleme -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set your focus goal (minutes):"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/etFocusGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter minutes"
        android:inputType="number"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSaveGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Goal"
        android:layout_marginTop="8dp"/>

    <!-- Kronometre -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elapsed: 0m 0s"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnStartFocus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Focus Mode"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnStopFocus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Focus Mode"
        android:layout_marginTop="8dp"/>

    <!-- Ä°lerleme -->
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress: 0/0 min"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Back to Main Page" />
</LinearLayout>
