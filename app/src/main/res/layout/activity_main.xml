<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Üst bar: Hedefler ve Ayarlar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#B3E5FC"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnGoals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Goals"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <!-- Ortadaki Pet resmi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/petCard"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/petImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <!-- Level kutucukları (pet kartının DIŞ ÜST SAĞINDA) -->

    <!-- Alt bar: Oyun -->

    <LinearLayout
        android:id="@+id/levelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/level_container_bg"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/petCard"
        app:layout_constraintEnd_toEndOf="@id/petCard">

        <TextView
            android:id="@+id/lvl1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:background="@drawable/level_box_shape" />

        <TextView
            android:id="@+id/lvl2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:background="@drawable/level_box_shape" />

        <TextView
            android:id="@+id/lvl3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:background="@drawable/level_box_shape" />

        <TextView
            android:id="@+id/lvl5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:background="@drawable/level_box_shape" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Level:"
            android:textColorLink="#06AF6E" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="740dp"
        android:layout_height="165dp"
        android:background="#B3E5FC"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnGame"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Game"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lvl4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="2dp"
        android:background="@drawable/level_box_shape"
        tools:layout_editor_absoluteX="436dp"
        tools:layout_editor_absoluteY="292dp"  />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:text="Dinozorcuk"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petCard"
        app:layout_constraintVertical_bias="0.863" />

</androidx.constraintlayout.widget.ConstraintLayout>
